#############################
### settings for i3-gaps: ###
#############################

# Set inner/outer gaps
gaps inner 5
gaps outer 1

smart_gaps on
smart_borders on

input type:keyboard {
    repeat_delay 290
    repeat_rate 32
    xkb_file "$HOME/.local/share/kb_map.xkb"
}

input type:touchpad {
# Enable tapping
    tap enabled
}

