{
  "modules-left": [
    "ext/workspaces",
    "custom/sep",
    "dwl/window#layout"
  ],
  "modules-right": [
    "custom/sep",
    "battery",
    "custom/sep",
    "cpu",
    "custom/sep",
    "memory",
    "custom/sep",
    "clock",
    "custom/sep",
    "custom/clipboard",
    "custom/sep",
    "pulseaudio",
    "custom/sep",
    "tray"
  ],

  "clock": {
    "format": "{:%H:%Mhs %Y-%m-%dğŸ“…}"
  },
  "cpu": {
    "format": "CPU: {usage}%",
    "tooltip": false,
    "states": {
        "warning": 60,
        "critical": 85
    }
  },
  "memory": {
    "format": "{used}Gb / {total}Gb",
    "interval": 4,
    "states": {
        "warning": 60,
        "critical": 85
    }
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 62,
      "critical": 38
    },
    "interval": 30,
    "format": "{capacity}% {icon} ",
    "format-charging": "ï‡¦ {capacity}% {icon} ",
    "format-plugged": "ï‡¦ plugged",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
  },
  "ext/workspaces": {
    "format": "{icon}",
    "ignore-hidden": false,
    "on-click": "activate",
    "sort-by-id": true
  },
  "dwl/tags": {
    "num-tags": 6
  },
  "dwl/window#layout": {
    "format": "[{layout}]"
  },
  "custom/sep": {
    "format": "|",
    "interval": 0
  },
  "custom/clipboard": {
    "format": "ïƒª history",
    "tooltip": "Clipboard history",
    "on-click": "cliphist list | rofi -dmenu -display-columns 2 | cliphist decode | wl-copy"
  },
  "pulseaudio": {
      "format": "{volume}% ï€¨",
      "format-muted": "ğŸ”‡",
      "scroll-step": 8,
      "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
      "on-scroll-up": "bash -c 'v=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -Po \"\\d+%\" | head -1 | tr -d \"%\"); [[ $v -lt 100 ]] && pactl set-sink-volume @DEFAULT_SINK@ +2%'",
      "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -2%"
  }
}
