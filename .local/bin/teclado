#!/bin/bash

flag=$1
if [[ ! -z flag ]]; then
    if setxkbmap -query | grep layout | grep --silent us; then
        echo "switching to SPANISH"
        notify-send "Keyboard Layout" "Switching to SPANISH  ðŸ‡ªðŸ‡¸"
        setxkbmap -layout es
    else
        echo "switching to ENGLISH"
        notify-send "Keyboard Layout" "Switching to ENGLISH  ðŸ‡ºðŸ‡¸"
        setxkbmap -layout us
    fi
fi

xmodmap -e "remove mod1 = Alt_R"
xmodmap -e "add mod4 = Alt_R"
# two times because one time sometimes doesn't work
xmodmap -e "remove mod1 = Alt_R"
xmodmap -e "add mod4 = Alt_R"
