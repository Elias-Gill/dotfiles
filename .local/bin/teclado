#!/bin/bash

# hacer toggle del layout
if [[ $1 == 0 ]]; then
    setxkbmap -layout us
else
    what_to_do=$(echo -e "english\nspanish" | dmenu)
    if [[ "$what_to_do" = "spanish" ]]; then
        setxkbmap -layout es
    else
        setxkbmap -layout us
    fi
fi

xset r rate 280 36
xmodmap -e "remove mod1 = Alt_R"
xmodmap -e "add mod4 = Alt_R"
